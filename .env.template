# LevAIthan Environment Configuration Template
# Copy this to .env and customize for your environment

# System Paths
CLAUDE_PROJECT_DIR=/path/to/your/project
HOOKS_DIR=$CLAUDE_PROJECT_DIR/.claude/hooks
CONTEXT_DIR=$CLAUDE_PROJECT_DIR/.claude/context
LOGS_DIR=$CLAUDE_PROJECT_DIR/.claude/logs

# Database Configuration
POSTGRES_DSN="postgresql://claude:password@localhost:5432/ai_system"
HelixDB_AUTH="HelixDB:password"
HelixDB_HTTP_URL="http://localhost:7474"
ELASTIC_URL="http://localhost:9200"
WEAVIATE_URL="http://localhost:8080"
REDIS_URL="redis://localhost:6379"

# AI Model Configuration
CLAUDE_MODEL="claude-3-sonnet-20240229"
EMBEDDING_MODEL_URL="http://localhost:8000/embed"

# System Configuration
CLAUDE_LOG_LEVEL=1  # 0=DEBUG, 1=INFO, 2=WARNING, 3=ERROR, 4=CRITICAL
SYSTEM_NAME="LevAIthan"
SYSTEM_VERSION="1.0.0"

# Security & Governance
ETHICS_STRICT_MODE=true
PRODUCTION_MODE=false
HUMAN_APPROVAL_REQUIRED=true

# Performance & Monitoring
MAX_CONCURRENT_SESSIONS=10
SESSION_TIMEOUT_HOURS=2
HEARTBEAT_INTERVAL_MINUTES=5

# Cost Management
DEFAULT_DAILY_BUDGET_USD=10.00
COST_ALERT_THRESHOLD_USD=8.00
